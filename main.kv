FloatLayout:
    canvas:
        Color:
            rgb: utils.get_color_from_hex("#001824")
        Rectangle:
            pos: self.pos
            size: self.size
    Image:
        pos_hint: {"right":1, "top":0.9}
        size_hint: 1, 0.2
        source: 'icones/hash.png'
        id: foto_perfil
    ScreenManager:
        pos_hint: {"right":1, "top":0.7}
        size_hint: 1, 0.7
        id: screen_manager
        LoginPage:
            id: loginpage
            name: 'loginpage'
        HomePage:
            id: homepage
            name: 'homepage'
        AjustesPage:
            id: ajustespage
            name: 'ajustespage'
        AdicionarVendasPage:
            id: adicionarvendaspage
            name: 'adicionarvendaspage'
        AdicionarVendedoresPage:
            id: adicionarvendedorespage
            name: 'adicionarvendedorespage'
        FotoPerfilPage:
            id: fotoperfilpage
            name: 'fotoperfilpage'
        ListarVendedoresPage:
            id: listarvendedorespage
            name: 'listarvendedorespage'
        TodasVendasPage:
            id: todasvendaspage
            name: 'todasvendaspage'
        VendasOutroVendedorPage:
