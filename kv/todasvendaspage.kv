<TodasVendasPage>:
    FloatLayout:
        canvas:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'icones/bg1.png'
        Label:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: 'icones/botao_fino.png'
            pos_hint: {"right": 0.85, "top": 0.95}
            size_hint: 0.7, 0.23
            text: "Total de Vendas: R$1"
            id: label_total_vendas
            markup: True

        # lista de vendas
        ScrollView:
            pos_hint: {"right": 1, "top": 0.75}
            size_hint: 1, 0.63
            GridLayout:
                cols: 1
                id: lista_vendas
                size_hint_y: None # esse none é para que o tamanho da lista seja definido pelo tamanho dos widgets
                spacing: 2, 2
                height: self.minimum_height # esse minimum_height é para que a lista tenha o tamanho minimo para caber todos os widgets
                row_default_height: "90dp" # altura de cada widget
                row_force_default: True # força a altura definida acima

        # barra da parte de baixo
        FloatLayout:
            pos_hint: {"right": 1, "top": 0.12}
            size_hint: 1, 0.12
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#006D7E")
                Rectangle:
                    pos: self.pos
                    size: self.size
            # botão voltar
            ImageButton:
                pos_hint: {"right": 0.2, "top": 0.9}
                size_hint: 0.2, 0.8
                source: "icones/voltar.png"
                on_release: app.sair_todas_vendas("ajustespage")