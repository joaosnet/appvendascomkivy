<AdicionarVendedoresPage>:
    FloatLayout:
        canvas:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'icones/bg1.png'
    Label:
        text:'Insira o [color=#00CFDB]ID de outro Vendedor[/color] para acompanhá-lo'
        bold: True
        markup: True
        pos_hint: {'right': 0.9, 'top': 0.8}
        size_hint: 0.8, 0.1
    
    LabelButton:
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'icones/botao.png' if self.state == 'normal' else 'icones/botao_apertado.png'
        on_release: app.adicionar_vendedor(input_id_outrovendedor.text)
        text:'Adicionar Vendedor'
        pos_hint: {'right': 0.9, 'top': 0.55}
        size_hint: 0.8, 0.2
        
    TextInput:
        id: input_id_outrovendedor
        hint_text:'123'
        pos_hint: {'right': 0.9, 'top': 0.7}
        size_hint: 0.8, 0.1

    Label:
        text:''
        id: mensagem_outrovendedor
        markup: True
        bold: True
        pos_hint: {'right': 0.9, 'top': 0.4}
        size_hint: 0.8, 0.1
        
    # barra da parte de baixo
    FloatLayout:
        pos_hint: {"right": 1, "top": 0.12}
        size_hint: 1, 0.12
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#006D7E")
            Rectangle:
                pos: self.pos
                size: self.size
        # botão voltar
        ImageButton:
            pos_hint: {"right": 0.2, "top": 0.9}
            size_hint: 0.2, 0.8
            source: "icones/voltar.png"
            on_release: app.mudar_tela("ajustespage")